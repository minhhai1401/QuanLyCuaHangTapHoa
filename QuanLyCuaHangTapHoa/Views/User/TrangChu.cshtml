@model PagedList.IPagedList<QuanLyCuaHangTapHoa.Models.Product>
@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section với Carousel -->
<div class="hero-section mb-5">
    <div class="container-fluid px-4">
        <div class="row g-4">
            <div class="col-lg-8">
                <div id="mainCarousel" class="carousel slide carousel-fade shadow-lg rounded" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active"></button>
                        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="1"></button>
                        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="2"></button>
                    </div>
                    <div class="carousel-inner rounded">
                        <div class="carousel-item active">
                            <img src="~/Content/images/Uudaimuahe.jpg" class="d-block w-100" alt="Ưu đãi mùa hè">
                            <div class="carousel-caption d-none d-md-block">
                                <h3>Ưu đãi mùa hè</h3>
                                <p>Giảm giá đến 50% cho tất cả sản phẩm</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/images/newproduct.jpg" class="d-block w-100" alt="Sản phẩm mới">
                            <div class="carousel-caption d-none d-md-block">
                                <h3>Sản phẩm mới</h3>
                                <p>Khám phá các sản phẩm mới nhất</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/images/freeship.png" class="d-block w-100" alt="Freeship">
                            <div class="carousel-caption d-none d-md-block">
                                <h3>Miễn phí vận chuyển</h3>
                                <p>Cho đơn hàng từ 300k</p>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="row g-4">
                    <div class="col-lg-12 col-md-6">
                        <div class="promo-card shadow-sm rounded overflow-hidden">
                            <img src="~/Content/images/giamgia20.jpg" class="w-100" alt="Khuyến mãi 1">
                            <div class="promo-overlay">
                                <h4>Giảm 20%</h4>
                                <p>Cho đơn hàng đầu tiên</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-6">
                        <div class="promo-card shadow-sm rounded overflow-hidden">
                            <img src="~/Content/images/tichdiem.jpg" class="w-100" alt="Khuyến mãi 2">
                            <div class="promo-overlay">
                                <h4>Tích điểm</h4>
                                <p>Đổi quà hấp dẫn</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Danh mục nổi bật -->
<section class="featured-categories mb-5">
    <div class="container">
        <h2 class="section-title text-center mb-4">Danh mục nổi bật</h2>
        <div class="row g-4">
            @{ int categoryCount = 0; }
            @foreach (var category in ViewBag.Categories)
            {
                if (categoryCount < 4)
                {
                    <div class="col-lg-3 col-md-4 col-6">
                        <a href="@Url.Action("TrangChu", "User", new { category = category.ID })" class="category-card">
                            <div class="card shadow-sm h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-box fa-2x mb-3 text-primary"></i>
                                    <h5 class="card-title">@category.CatalogName</h5>
                                    <p class="card-text">
                                        <span class="badge bg-primary">@category.ProductCount sản phẩm</span>
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
                categoryCount++;
            }
        </div>
    </div>
</section>

<!-- Sản phẩm nổi bật -->
<section class="featured-products mb-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="section-title mb-0">Sản phẩm nổi bật</h2>
            <a href="@Url.Action("TatCaSanPham", "Product")" class="btn btn-outline-primary">Xem tất cả</a>
        </div>
        <div class="row g-4">
            @{ int productCount = 0; }
            @foreach (var item in Model)
            {
                if (productCount < 4)
                {
                    <div class="col-lg-3 col-md-4 col-6">
                        <div class="product-card h-100">
                            <div class="card shadow-sm h-100">
                                <div class="product-image position-relative">
                                    <img src="@item.FullPicturePath"
                                         class="card-img-top" alt="@item.ProductName">
                                    @if (item.SoLuong <= 0)
                                    {
                                        <span class="badge bg-danger position-absolute top-0 end-0 m-2">Hết hàng</span>
                                    }
                                    else if (item.SoLuong <= 50)
                                    {
                                        <span class="badge bg-warning position-absolute top-0 end-0 m-2">Sắp hết</span>
                                    }
                                    @if (!string.IsNullOrEmpty(item.ProductSale))
                                    {
                                        <div class="discount-badge">
                                            <span>-@item.ProductSale%</span>
                                        </div>
                                    }
                                    @if (item.ProductSold >= 100)
                                    {
                                        <div class="bestseller-badge">
                                            <i class="fas fa-fire"></i> Bán chạy
                                        </div>
                                    }
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <div class="product-category small text-muted mb-2">
                                        <i class="fas fa-tag me-1"></i>@item.Catalog.CatalogName
                                    </div>
                                    <h5 class="card-title product-name" title="@item.ProductName">
                                        @item.ProductName
                                    </h5>
                                    <div class="price-section mb-3">
                                        @if (item.PriceOld.HasValue && item.PriceOld > item.UnitPrice)
                                        {
                                            <div class="old-price text-muted text-decoration-line-through">
                                                @string.Format("{0:#,0}", item.PriceOld)đ
                                            </div>
                                        }
                                        <div class="current-price">
                                            @string.Format("{0:#,0}", item.UnitPrice)đ
                                        </div>
                                    </div>
                                    <div class="product-stats small text-muted mb-3">
                                        @if (item.ProductSold.HasValue && item.ProductSold > 0)
                                        {
                                            <span class="me-2">
                                                <i class="fas fa-shopping-cart me-1"></i>Đã bán: @item.ProductSold
                                            </span>
                                        }
                                        <span>
                                            <i class="fas fa-boxes me-1"></i>Còn lại: @item.SoLuong
                                        </span>
                                    </div>
                                    <div class="mt-auto">
                                        @if (item.SoLuong > 0)
                                        {
                                            <a href="@Url.Action("ThemGioHang", "Giohang", new { id = item.Id, strURL = Request.Url.ToString() })"
                                               class="btn btn-primary w-100 mb-2 add-to-cart-btn"
                                               data-product-id="@item.Id"
                                               onclick="return false;">

                                                <i class="fas fa-cart-plus me-2"></i>Thêm vào giỏ

                                            </a>
                                        }
                                        <a href="@Url.Action("ChiTietSP", "Product", new { id = item.Id })"
                                           class="btn btn-outline-secondary w-100">
                                            <i class="fas fa-info-circle me-2"></i>Chi tiết
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                productCount++;
            }
        </div>
    </div>
</section>

<!-- Phân trang -->
@if (Model.PageCount > 1)
{
    <div class="container mb-5">
        <nav aria-label="Phân trang sản phẩm">
            <div class="pagination-wrapper">
                <ul class="pagination pagination-custom justify-content-center">
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link page-prev" href="@Url.Action("TrangChu", new { page = 1, searchString = ViewBag.searchStr, category = ViewBag.SelectedCategory })" aria-label="Đầu tiên">
                                <i class="fas fa-angle-double-left"></i>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link page-prev" href="@Url.Action("TrangChu", new { page = Model.PageNumber - 1, searchString = ViewBag.searchStr, category = ViewBag.SelectedCategory })" aria-label="Trước">
                                <i class="fas fa-angle-left"></i>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link page-prev">
                                <i class="fas fa-angle-double-left"></i>
                            </span>
                        </li>
                        <li class="page-item disabled">
                            <span class="page-link page-prev">
                                <i class="fas fa-angle-left"></i>
                            </span>
                        </li>
                    }

                    @{
                        int startPage = Math.Max(1, Model.PageNumber - 2);
                        int endPage = Math.Min(Model.PageCount, startPage + 4);
                        startPage = Math.Max(1, endPage - 4);
                    }

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" href="@Url.Action("TrangChu", new { page = i, searchString = ViewBag.searchStr, category = ViewBag.SelectedCategory })">@i</a>
                        </li>
                    }

                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link page-next" href="@Url.Action("TrangChu", new { page = Model.PageNumber + 1, searchString = ViewBag.searchStr, category = ViewBag.SelectedCategory })" aria-label="Tiếp">
                                <i class="fas fa-angle-right"></i>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link page-next" href="@Url.Action("TrangChu", new { page = Model.PageCount, searchString = ViewBag.searchStr, category = ViewBag.SelectedCategory })" aria-label="Cuối cùng">
                                <i class="fas fa-angle-double-right"></i>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link page-next">
                                <i class="fas fa-angle-right"></i>
                            </span>
                        </li>
                        <li class="page-item disabled">
                            <span class="page-link page-next">
                                <i class="fas fa-angle-double-right"></i>
                            </span>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </div>
}

