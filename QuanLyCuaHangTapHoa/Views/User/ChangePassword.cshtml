@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Đổi mật khẩu</h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <label for="currentPassword">Mật khẩu hiện tại</label>
                            <input type="password" class="form-control" id="currentPassword" name="currentPassword">
                            @Html.ValidationMessage("currentPassword", "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-3">
                            <label for="newPassword">Mật khẩu mới</label>
                            <input type="password" class="form-control" id="newPassword" name="newPassword">
                            @Html.ValidationMessage("newPassword", "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-3">
                            <label for="confirmPassword">Xác nhận mật khẩu mới</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
                            @Html.ValidationMessage("confirmPassword", "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary w-100">Đổi mật khẩu</button>
                        </div>

                        <div class="text-center mt-3">
                            @Html.ActionLink("Quay lại thông tin cá nhân", "Profile", "User", null, new { @class = "text-decoration-none" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            // Client-side validation
            $("form").submit(function (e) {
                var isValid = true;
                var currentPassword = $("#currentPassword").val();
                var newPassword = $("#newPassword").val();
                var confirmPassword = $("#confirmPassword").val();

                // Reset previous error messages
                $(".text-danger").text("");

                if (!currentPassword) {
                    $("#currentPassword").next(".text-danger").text("Vui lòng nhập mật khẩu hiện tại");
                    isValid = false;
                }

                if (!newPassword) {
                    $("#newPassword").next(".text-danger").text("Vui lòng nhập mật khẩu mới");
                    isValid = false;
                } else if (newPassword.length < 6) {
                    $("#newPassword").next(".text-danger").text("Mật khẩu mới phải có ít nhất 6 ký tự");
                    isValid = false;
                }

                if (!confirmPassword) {
                    $("#confirmPassword").next(".text-danger").text("Vui lòng xác nhận mật khẩu mới");
                    isValid = false;
                } else if (confirmPassword !== newPassword) {
                    $("#confirmPassword").next(".text-danger").text("Mật khẩu mới và xác nhận mật khẩu không khớp");
                    isValid = false;
                }

                return isValid;
            });
        });
    </script>
}