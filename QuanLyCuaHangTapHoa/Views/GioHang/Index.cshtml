@model List<QuanLyCuaHangTapHoa.Models.Giohang>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="cart-header mb-4">
                <h1 class="h3 mb-3">
                    <i class="fas fa-shopping-cart text-primary me-2"></i>
                    Giỏ hàng của bạn
                </h1>
                <p class="text-muted">@ViewBag.Tongsoluong sản phẩm trong giỏ hàng</p>
            </div>
        </div>
    </div>

    @if (Model.Count > 0)
    {
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th scope="col">Sản phẩm</th>
                                        <th scope="col" class="text-center">Đơn giá</th>
                                        <th scope="col" class="text-center">Số lượng</th>
                                        <th scope="col" class="text-end">Thành tiền</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td style="min-width: 300px;">
                                                <div class="d-flex align-items-center">
                                                    <img src="~/Resources/Pictures/Products/@item.Picture"
                                                         alt="@item.ProductName"
                                                         class="img-thumbnail me-3"
                                                         style="width: 64px; height: 64px; object-fit: cover;" />
                                                    <div>
                                                        <h6 class="mb-1">@item.ProductName</h6>
                                                        <small class="text-muted">Mã SP: @item.IdProduct</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="align-middle text-center">
                                                @String.Format("{0:#,0}", item.DonGia)₫
                                            </td>
                                            <td class="align-middle">
                                                @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { id = item.IdProduct }))
                                                {
                                                    <div class="d-flex justify-content-center align-items-center">
                                                        <input type="number"
                                                               name="txtSoLuong"
                                                               value="@item.SoLuong"
                                                               min="1"
                                                               class="form-control text-center"
                                                               style="width: 80px;"
                                                               onchange="this.form.submit()" />
                                                    </div>
                                                }
                                            </td>
                                            <td class="align-middle text-end">
                                                @String.Format("{0:#,0}", item.ThanhTien)₫
                                            </td>
                                            <td class="align-middle text-center">
                                                <a href="@Url.Action("XoaGioHang", "Giohang", new { id = item.IdProduct })"
                                                   class="btn btn-sm btn-outline-danger"
                                                   onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?')">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-receipt text-primary me-2"></i>
                            Tổng đơn hàng
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Tổng sản phẩm:</span>
                                <span>@ViewBag.Tongsoluong</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Tạm tính:</span>
                                <span>@String.Format("{0:#,0}", ViewBag.Tongtien)₫</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Phí vận chuyển:</span>
                                <span class="text-success">Miễn phí</span>
                            </div>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <span class="h5 mb-0">Tổng cộng:</span>
                            <span class="h4 mb-0 text-primary">@String.Format("{0:#,0}", ViewBag.Tongtien)₫</span>
                        </div>

                        <div class="d-grid gap-2">
                            <a href="@Url.Action("DatHang", "Giohang")" class="btn btn-primary">
                                <i class="fas fa-shopping-cart me-2"></i>
                                Tiến hành đặt hàng
                            </a>
                            <a href="@Url.Action("TrangChu", "User")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>
                                Tiếp tục mua sắm
                            </a>
                            <a href="@Url.Action("XoaTatCaGioHang", "Giohang")"
                               class="btn btn-outline-danger"
                               onclick="return confirm('Bạn có chắc muốn xóa tất cả sản phẩm trong giỏ hàng?')">
                                <i class="fas fa-trash me-2"></i>
                                Xóa giỏ hàng
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
            <h3>Giỏ hàng trống</h3>
            <p class="text-muted">Hãy thêm sản phẩm vào giỏ hàng của bạn</p>
            <a href="@Url.Action("TrangChu", "User")" class="btn btn-primary">
                <i class="fas fa-shopping-bag me-2"></i>
                Tiếp tục mua sắm
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Hiển thị thông báo nếu có
        @if (TempData["msg"] != null)
        {
            <text>
            toastr.warning('@TempData["msg"]');
            </text>
        }

        @if (TempData["success"] != null)
        {
            <text>
            toastr.success('@TempData["success"]');
            </text>
        }

        @if (TempData["error"] != null)
        {
            <text>
            toastr.error('@TempData["error"]');
            </text>
        }
    </script>
}