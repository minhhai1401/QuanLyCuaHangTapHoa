@model QuanLyCuaHangTapHoa.Models.Product
@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Chi Tiết Sản Phẩm</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-box-open"></i>
                Chi Tiết Sản Phẩm
            </h1>
            <div class="product-id">
                Mã sản phẩm: @Model.Id
            </div>
        </div>

        <div class="details-card">
            <div class="details-grid">
                <div class="image-section">
                    <div class="image-container">
                        <img src="@Url.Content("~/Resources/Pictures/Products/" + Model.Picture)"
                             alt="@Model.ProductName"
                             class="product-image" />
                    </div>
                </div>

                <div class="info-section">
                    <div class="info-group">
                        <label class="info-label">Mã sản phẩm</label>
                        <div class="info-value">@Model.ProductCode</div>
                    </div>

                    <div class="info-group">
                        <label class="info-label">Tên sản phẩm</label>
                        <div class="info-value">@Model.ProductName</div>
                    </div>

                    <div class="info-group">
                        <label class="info-label">Danh mục</label>
                        <div class="info-value">@Model.Catalog.CatalogName</div>
                    </div>

                    <div class="info-row">
                        <div class="info-group">
                            <label class="info-label">Số lượng hiện có</label>
                            <div class="info-value">@Model.SoLuong</div>
                        </div>

                        <div class="info-group">
                            <label class="info-label">Đã bán</label>
                            <div class="info-value">@Model.ProductSold</div>
                        </div>
                    </div>

                    <div class="info-row">
                        <div class="info-group">
                            <label class="info-label">Giá vốn</label>
                            <div class="info-value price">@string.Format("{0:#,0}", Model.PriceOld) đ</div>
                        </div>

                        <div class="info-group">
                            <label class="info-label">Giảm giá</label>
                            <div class="info-value">@Model.ProductSale%</div>
                        </div>
                    </div>

                    <div class="info-group">
                        <label class="info-label">Giá bán</label>
                        <div class="info-value price highlight">@string.Format("{0:#,0}", Model.UnitPrice) đ</div>
                    </div>
                </div>
            </div>

            <div class="description-section">
                <h2 class="section-title">Mô tả sản phẩm</h2>
                <div class="description-content">
                    @Html.Raw(Model.MoTa)
                </div>
            </div>

            <div class="button-group">
                <a href="@Url.Action("Edit", "Product", new { id = Model.Id })" class="btn btn-edit">
                    <i class="fas fa-edit"></i>
                    Chỉnh Sửa
                </a>
                <a href="@Url.Action("Indexadminsp", "Product")" class="btn btn-back">
                    <i class="fas fa-arrow-left"></i>
                    Quay Lại
                </a>
            </div>
        </div>
    </div>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', system-ui, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f0f7ff 0%, #e6f0ff 100%);
            min-height: 100vh;
            padding: 2rem;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .page-header {
            background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
            padding: 2rem;
            border-radius: 1rem;
            margin-bottom: 2rem;
            color: white;
            position: relative;
            overflow: hidden;
            box-shadow: 0 10px 25px -5px rgba(37, 99, 235, 0.25);
        }

        .page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 60%);
            animation: rotate 20s linear infinite;
        }

        @@keyframes rotate {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .page-title {
            font-size: 2rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
            position: relative;
            z-index: 1;
        }

        .product-id {
            font-size: 1.2rem;
            opacity: 0.9;
            position: relative;
            z-index: 1;
        }

        .details-card {
            background: white;
            border-radius: 1rem;
            padding: 2rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .details-grid {
            display: grid;
            grid-template-columns: 300px 1fr;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .image-section {
            width: 100%;
        }

        .image-container {
            width: 100%;
            height: 300px;
            border: 2px solid #e2e8f0;
            border-radius: 0.5rem;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .product-image {
            max-width: 100%;
            max-height: 100%;
            object-fit: cover;
        }

        .info-section {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .info-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
        }

        .info-group {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .info-label {
            font-weight: 600;
            color: #64748b;
            font-size: 0.875rem;
        }

        .info-value {
            font-size: 1.125rem;
            color: #1e293b;
            padding: 0.75rem;
            background: #f8fafc;
            border-radius: 0.5rem;
            border: 1px solid #e2e8f0;
        }

        .info-value.price {
            color: #2563eb;
            font-weight: 600;
        }

        .info-value.highlight {
            background: #eff6ff;
            border-color: #bfdbfe;
            color: #1d4ed8;
            font-size: 1.25rem;
        }

        .description-section {
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid #e2e8f0;
        }

        .section-title {
            font-size: 1.5rem;
            color: #1e293b;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .description-content {
            padding: 1.5rem;
            background: #f8fafc;
            border-radius: 0.5rem;
            border: 1px solid #e2e8f0;
            line-height: 1.6;
            color: #334155;
        }

        .button-group {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid #e2e8f0;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .btn-edit {
            background: #2563eb;
            color: white;
        }

        .btn-edit:hover {
            background: #1d4ed8;
            transform: translateY(-2px);
        }

        .btn-back {
            background: #f1f5f9;
            color: #64748b;
        }

        .btn-back:hover {
            background: #e2e8f0;
            transform: translateY(-2px);
        }

        @@media (max-width: 768px) {
            .details-grid {
                grid-template-columns: 1fr;
            }

            .image-container {
                height: 250px;
            }

            .info-row {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .button-group {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</body>
</html>