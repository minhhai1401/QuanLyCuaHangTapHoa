@model QuanLyCuaHangTapHoa.Models.Order
@{
    ViewBag.Title = "Doanh Thu";
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}

<div class="container">
    <div class="dashboard-header">
        <h1 class="page-title">
            <i class="fas fa-chart-pie"></i>
            Thống Kê Doanh Thu
        </h1>
        <div class="stats">
        </div>
    </div>

    <div class="stats-cards">
        <!-- Doanh thu theo ngày -->
        <div class="stat-card">
            <div class="card-content">
                <div class="card-icon">
                    <i class="fas fa-calendar-day"></i>
                </div>
                @using (Html.BeginForm("DoanhThuNgay", "DoanhThu", FormMethod.Post, new { @class = "revenue-form" }))
                {
                    <h3 class="card-title">Doanh thu theo ngày</h3>
                    <p class="card-description">Xem chi tiết doanh thu và số lượng sản phẩm bán ra trong ngày</p>
                    <div class="form-group">
                        <input type="date" name="NgayGiao" class="form-control" required />
                    </div>
                    <button type="submit" class="action-button view-button">
                        <i class="fas fa-search"></i>
                        Xem báo cáo
                    </button>
                }
            </div>
        </div>

        <!-- Doanh thu theo tháng -->
        <div class="stat-card">
            <div class="card-content">
                <div class="card-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                @using (Html.BeginForm("DoanhThuThang", "DoanhThu", FormMethod.Post, new { @class = "revenue-form" }))
                {
                    <h3 class="card-title">Doanh thu theo tháng</h3>
                    <p class="card-description">Thống kê chi tiết doanh thu và sản phẩm trong tháng</p>
                    <div class="form-group">
                        <input type="date" name="NgayGiao" class="form-control" required />
                    </div>
                    <button type="submit" class="action-button view-button">
                        <i class="fas fa-search"></i>
                        Xem báo cáo
                    </button>
                }
            </div>
        </div>

        <!-- Doanh thu theo năm -->
        <div class="stat-card">
            <div class="card-content">
                <div class="card-icon">
                    <i class="fas fa-calendar-week"></i>
                </div>
                @using (Html.BeginForm("DoanhThuNam", "DoanhThu", FormMethod.Post, new { @class = "revenue-form" }))
                {
                    <h3 class="card-title">Doanh thu theo năm</h3>
                    <p class="card-description">Phân tích doanh thu và hiệu quả kinh doanh theo năm</p>
                    <div class="form-group">
                        <input type="date" name="NgayGiao" class="form-control" required />
                    </div>
                    <button type="submit" class="action-button view-button">
                        <i class="fas fa-search"></i>
                        Xem báo cáo
                    </button>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Xử lý form submit
            $('.revenue-form').on('submit', function () {
                var dateInput = $(this).find('input[type="date"]');
                if (!dateInput.val()) {
                    alert('Vui lòng chọn ngày!');
                    return false;
                }
            });

            // Hiển thị thông báo lỗi
            @if (TempData["msgDate"] != null)
            {
                @:$('.text-danger').fadeOut(5000);
            }

            // Highlight khi focus
            $('.form-control').focus(function() {
                $(this).closest('.stat-card').addClass('active');
            }).blur(function() {
                $(this).closest('.stat-card').removeClass('active');
            });
        });
    </script>
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', system-ui, sans-serif;
    }

    .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem;
    }

    .dashboard-header {
        background: linear-gradient(135deg, #d6b088 0%, #a47148 100%);
        padding: 2.5rem;
        border-radius: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 10px 25px -5px rgba(164, 113, 72, 0.3);
        color: #fff;
        position: relative;
        overflow: hidden;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        color: white;
    }

    .stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }

    .stat-item {
        background: rgba(255, 255, 255, 0.2);
        padding: 1.5rem;
        border-radius: 1rem;
        backdrop-filter: blur(10px);
        display: flex;
        align-items: center;
        gap: 1.5rem;
        transition: transform 0.3s ease;
    }

        .stat-item:hover {
            transform: translateY(-5px);
        }

    .stat-icon {
        width: 3rem;
        height: 3rem;
        background: rgba(255, 255, 255, 0.3);
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
    }

    .stat-info {
        color: white;
    }

    .stat-label {
        font-size: 1.25rem;
        opacity: 0.9;
        margin-bottom: 0.5rem;
        font-weight: 500;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: bold;
        line-height: 1.2;
    }

    .stats-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .stat-card {
        background: white;
        border-radius: 1rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }

    .card-content {
        padding: 2rem;
    }

    .card-icon {
        width: 4rem;
        height: 4rem;
        background: #faf3ee;
        border-radius: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: #a47148;
        margin-bottom: 1.5rem;
    }

    .card-title {
        font-size: 1.5rem;
        color: #502d16;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .card-description {
        color: #666;
        margin-bottom: 1.5rem;
        line-height: 1.5;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 2px solid #e5e7eb;
        border-radius: 0.5rem;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            outline: none;
            border-color: #a47148;
            box-shadow: 0 0 0 3px rgba(164, 113, 72, 0.1);
        }

    .action-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        width: 100%;
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 0.5rem;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .view-button {
        background: #a47148;
        color: white;
    }

        .view-button:hover {
            background: #8b5e3c;
        }

    @@media (max-width: 768px) {
        .stats, .stats-cards {
            grid-template-columns: 1fr;
        }

        .card-content {
            padding: 1.5rem;
        }
    }

    .text-danger {
        color: #dc2626;
        margin-bottom: 1rem;
    }
</style>