@model IEnumerable<QuanLyCuaHangTapHoa.Models.KhachHang>

@{
    ViewBag.Title = "Quản lí khách hàng";
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Quản lý Khách Hàng</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="dashboard-header">
            <h1 class="page-title">
                <i class="fas fa-users"></i>
                Quản lý Khách Hàng
            </h1>
            <div class="stats">
                <div class="stat-item">
                    <div>Tổng số khách hàng</div>
                    <div style="font-size: 1.5rem; font-weight: bold;">@ViewBag.dsKH.Count</div>
                </div>
                <div class="stat-item">
                    <div>Cập nhật lần cuối</div>
                    <div style="font-size: 1.5rem; font-weight: bold;">@DateTime.Now.ToString("dd/MM/yyyy")</div>
                </div>
            </div>
        </div>

        <a href="@Url.Action("Create","KhachHang")" class="create-button">
            <i class="fas fa-plus-circle"></i>
            Thêm khách hàng mới
        </a>

        <div class="search-box">
            @using (Html.BeginForm("Index", "KhachHang", FormMethod.Get))
            {
                <div class="search-input-container">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" name="searchStr" placeholder="Tìm kiếm khách hàng..." />
                </div>
            }
        </div>

        <div class="customer-table">
            <table style="width: 100%;">
                <thead>
                    <tr>
                        <th>Họ và tên</th>
                        <th>Email</th>
                        <th>Ảnh đại diện</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.dsKH)
                    {
                        <tr>
                            <td>
                                <div style="font-weight: 500;">
                                    @($"{item.FirstName} {item.LastName}".Trim())
                                </div>
                            </td>
                            <td>@(item.Email ?? "Không có email")</td>
                            <td>
                                @if (string.IsNullOrEmpty(item.Picture))
                                {
                                    <div class="avatar-placeholder">
                                        <i class="fas fa-user"></i>
                                    </div>
                                }
                                else
                                {
                                    <img src="~/Hinh/KhachHang/@item.Picture"
                                         class="avatar-image"
                                         alt="Avatar"
                                         onerror="this.onerror=null; this.src='~/Hinh/KhachHang/default.png';" />
                                }
                            </td>
                            <td>@item.Address</td>
                            <td>@item.Sdt</td>
                            <td class="action-links-container">
                                <div class="action-links">
                                    <button class="action-button delete-button" title="Xóa"
                                            onclick="location.href='@Url.Action("Delete", "KhachHang", new { id = item.idUser })'">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                    <button class="action-button edit-button" title="Sửa"
                                            onclick="location.href='@Url.Action("Edit", "KhachHang", new { Id = item.idUser })'">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="action-button view-button" title="Xem thông tin"
                                            onclick="location.href='@Url.Action("Detail", "KhachHang", new { Id = item.idUser })'">
                                        <i class="fas fa-user"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', system-ui, sans-serif;
    }

    body {
        background: linear-gradient(135deg, #e0f7fa 0%, #b2ebf2 100%);
        min-height: 100vh;
        padding: 2rem;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .dashboard-header {
        background: linear-gradient(135deg, #00bcd4 0%, #0097a7 100%);
        padding: 2rem;
        border-radius: 1rem;
        margin-bottom: 2rem;
        box-shadow: 0 10px 25px -5px rgba(0, 188, 212, 0.25);
        color: white;
        position: relative;
        overflow: hidden;
    }

    .dashboard-header::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 60%);
        animation: rotate 20s linear infinite;
    }

    @@keyframes rotate {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1rem;
        position: relative;
        z-index: 1;
    }

    .stats {
        display: flex;
        gap: 2rem;
        margin-top: 1rem;
        position: relative;
        z-index: 1;
    }

    .stat-item {
        background: rgba(255, 255, 255, 0.1);
        padding: 1rem;
        border-radius: 0.5rem;
        backdrop-filter: blur(10px);
    }

    .create-button {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: #00b5cc;
        color: white;
        padding: 1rem 2rem;
        border-radius: 0.5rem;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        margin-bottom: 2rem;
        box-shadow: 0 4px 6px -1px rgba(59, 130, 246, 0.1);
    }

    .create-button:hover {
        transform: translateY(-2px);
        background: #2563eb;
        box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.2);
    }

    .create-button i {
        font-size: 1.2rem;
    }

    .search-box {
        margin-bottom: 2rem;
    }

    .search-input-container {
        position: relative;
        max-width: 300px;
    }

    .search-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #94a3b8;
    }

    .search-box input {
        width: 100%;
        padding: 0.75rem 1rem 0.75rem 2.5rem;
        border: 1px solid #e2e8f0;
        border-radius: 0.5rem;
        outline: none;
        transition: all 0.3s;
    }

    .search-box input:focus {
        border-color: #00bcd4;
        box-shadow: 0 0 0 3px rgba(0, 188, 212, 0.1);
    }

    .customer-table {
        width: 100%;
        background: white;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .customer-table th {
        background: #f8fafc;
        padding: 1.25rem 1rem;
        text-align: left;
        color: #1e293b;
        font-weight: 600;
        border-bottom: 2px solid #e2e8f0;
    }

    .customer-table td {
        padding: 1.25rem 1rem;
        border-bottom: 1px solid #f1f5f9;
        color: #475569;
        vertical-align: middle;
    }

    .customer-table tr:hover td {
        background: #f8fafc;
    }

    .avatar-image {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 0.5rem;
        display: block;
        margin: 0 auto;
    }

    .avatar-placeholder {
        width: 100px;
        height: 100px;
        background-color: #e2e8f0;
        border-radius: 0.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto;
    }

    .avatar-placeholder i {
        font-size: 2rem;
        color: #94a3b8;
    }

    .action-links-container {
        width: 250px;
        padding: 0.5rem !important;
    }

    .action-links {
        display: flex;
        gap: 0.5rem;
        width: 100%;
    }

    .action-button {
        flex: 1;
        padding: 0.75rem;
        border-radius: 0.375rem;
        border: none;
        cursor: pointer;
        transition: all 0.2s;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .action-button i {
        font-size: 1rem;
    }

    .delete-button {
        background: #ef4444;
    }

    .delete-button:hover {
        background: #dc2626;
    }

    .edit-button {
        background: #00bcd4;
    }

    .edit-button:hover {
        background: #0097a7;
    }

    .view-button {
        background: #3b82f6;
    }

    .view-button:hover {
        background: #2563eb;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .customer-table tbody tr {
        animation: fadeIn 0.3s ease-out forwards;
    }

    @@media (max-width: 768px) {
        .stats {
            flex-direction: column;
            gap: 1rem;
        }

        .action-links-container {
            width: auto;
        }
    }
</style>