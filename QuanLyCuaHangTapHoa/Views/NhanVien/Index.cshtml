@model IEnumerable<QuanLyCuaHangTapHoa.Models.NhanVien>

@{
    ViewBag.Title = "Quản Lí Nhân Viên";
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Quản lý Nhân Viên</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="dashboard-header">
            <h1 class="page-title">
                <i class="fas fa-users"></i>
                Quản lý Nhân Viên
            </h1>
            <div class="stats">
                <div class="stat-item">
                    <div>Tổng số nhân viên</div>
                    <div style="font-size: 1.5rem; font-weight: bold;">@ViewBag.NhanVien.Count</div>
                </div>
                <div class="stat-item">
                    <div>Cập nhật lần cuối</div>
                    <div style="font-size: 1.5rem; font-weight: bold;">@DateTime.Now.ToString("dd/MM/yyyy")</div>
                </div>
            </div>
        </div>

        <a href="@Url.Action("Create","NhanVien")" class="create-button">
            <i class="fas fa-plus-circle"></i>
            Tạo mới nhân viên
        </a>

        <div class="search-box">
            @using (Html.BeginForm("Index", "NhanVien", FormMethod.Get))
            {
                <input type="text" name="searchString" placeholder="Tìm kiếm theo họ tên..." />
            }
        </div>

        <div class="employee-table">
            <table style="width: 100%;">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Họ và tên</th>
                        <th>Ảnh thẻ</th>
                        <th>Địa chỉ</th>
                        <th>Giới tính</th>
                        <th>SĐT</th>
                        <th>Chức vụ</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.NhanVien)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>
                                <div style="font-weight: 500;">@item.FullName</div>
                            </td>
                            <td>
                                @if (string.IsNullOrEmpty(item.Picture))
                                {
                                    <img src="~/Hinh/user.jpg" alt="Image" class="employee-image" />
                                }
                                else
                                {
                                    <img src="~/Hinh/NhanVien/@item.Picture" alt="Image" class="employee-image" />
                                }
                            </td>
                            <td>@item.Address</td>
                            <td>
                                <span class="gender-badge">
                                    @((item.Sex == true ? "Nam" : "Nữ"))
                                </span>
                            </td>
                            <td>@item.Sdt</td>
                            <td>@item.ChucVu.ChucVu1</td>
                            <td class="action-links-container">
                                <div class="action-links">
                                    <button class="action-button delete-button" title="Xóa"
                                            onclick="location.href='@Url.Action("Delete", "NhanVien", new { id = item.Id })'">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                    <button class="action-button edit-button" title="Sửa"
                                            onclick="location.href='@Url.Action("Edit", "NhanVien", new { id = item.Id })'">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="action-button view-button" title="Xem thông tin"
                                            onclick="location.href='@Url.Action("Detail", "NhanVien", new { id = item.Id })'">
                                        <i class="fas fa-user"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>


<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', system-ui, sans-serif;
    }

    body {
        background: linear-gradient(135deg, #f6fff8 0%, #f1fff5 100%);
        min-height: 100vh;
        padding: 2rem;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .dashboard-header {
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        padding: 2rem;
        border-radius: 1rem;
        margin-bottom: 2rem;
        box-shadow: 0 10px 25px -5px rgba(34, 197, 94, 0.25);
        color: white;
        position: relative;
        overflow: hidden;
    }

        .dashboard-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 60%);
            animation: rotate 20s linear infinite;
        }

    @@keyframes rotate {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1rem;
        position: relative;
        z-index: 1;
    }

    .stats {
        display: flex;
        gap: 2rem;
        margin-top: 1rem;
        position: relative;
        z-index: 1;
    }

    .stat-item {
        background: rgba(255, 255, 255, 0.1);
        padding: 1rem;
        border-radius: 0.5rem;
        backdrop-filter: blur(10px);
    }

    .create-button {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: #22c55e;
        color: white;
        padding: 1rem 2rem;
        border-radius: 0.5rem;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        margin-bottom: 2rem;
        box-shadow: 0 4px 6px -1px rgba(34, 197, 94, 0.1);
    }

        .create-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(34, 197, 94, 0.2);
        }

        .create-button i {
            font-size: 1.2rem;
        }

    .search-box {
        margin-bottom: 2rem;
    }

        .search-box input {
            width: 300px;
            padding: 0.75rem 1rem;
            border: 1px solid #e2e8f0;
            border-radius: 0.5rem;
            outline: none;
            transition: all 0.3s;
        }

            .search-box input:focus {
                border-color: #22c55e;
                box-shadow: 0 0 0 3px rgba(34, 197, 94, 0.1);
            }

    .employee-table {
        width: 100%;
        background: white;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

        .employee-table th {
            background: #f8fafc;
            padding: 1.25rem 1rem;
            text-align: left;
            color: #1e293b;
            font-weight: 600;
            border-bottom: 2px solid #e2e8f0;
        }

        .employee-table td {
            padding: 1.25rem 1rem;
            border-bottom: 1px solid #f1f5f9;
            color: #475569;
            vertical-align: middle;
        }

        .employee-table tr:hover td {
            background: #f8fafc;
        }

    .employee-image {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 0.5rem;
    }

    .action-links-container {
        width: 250px; /* Cố định chiều rộng cột thao tác */
        padding: 0.5rem !important;
    }

    .action-links {
        display: flex;
        gap: 0.5rem;
        width: 100%;
    }

    .action-button {
        flex: 1;
        padding: 0.75rem;
        border-radius: 0.375rem;
        border: none;
        cursor: pointer;
        transition: all 0.2s;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem; /* Khoảng cách giữa icon và text */
    }

        .action-button i {
            font-size: 1rem;
        }

        .action-button span {
            display: inline-block;
            font-size: 0.875rem;
            font-weight: 500;
        }

    /* Màu sắc cho các nút */
    .delete-button {
        background: #ef4444;
    }

        .delete-button:hover {
            background: #dc2626;
        }

    .edit-button {
        background: #22c55e;
    }

        .edit-button:hover {
            background: #16a34a;
        }

    .view-button {
        background: #3b82f6;
    }

        .view-button:hover {
            background: #2563eb;
        }

    .gender-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 500;
        background: #f0fdf4;
        color: #16a34a;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .employee-table tbody tr {
        animation: fadeIn 0.3s ease-out forwards;
    }
</style>